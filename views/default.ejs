        |<a href="/post">发布文章
        <% if(user){ %>
            |<a href="/logout">登出</a>
        <%} else{%>
            |<a href="/login">登录</a>
        <%}%>
            </div>
</footer>

</body>

<script type='text/javascript'>
    var htype = $("#htype").val();
    if(1 == htype){
        $('#index').addClass('current');    
    }
    if(2 == htype){ 
        $('#archives').addClass('current');    
    }
    if(3 == htype){
        $('#about').addClass('current');    
    }    
</script>
